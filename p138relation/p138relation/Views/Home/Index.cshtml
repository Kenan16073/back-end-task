@model List<Marka>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<ul class="list-group">
    @foreach (Marka marka in Model)
    {
        <li class="list-group-item active" aria-current="true">
            <a asp-controller="model" asp-action="index" asp-route-id="@marka.Id">@marka.Name  </a>
        </li>
    }
    
    
</ul>